
%(a)
f = @(x) x^2*exp(-x^2)
fprintf('Estimate of integral = %f\n',composite_trapezoid(f,0,2,8));
%(b)
f = @(x) 1/(x*log(x));
fprintf('Estimate of integral = %f\n',composite_trapezoid(f,exp(1),exp(1)+2,8));
%(c)
f = @(x) x^2
fprintf('Estimate of integral = %f\n',composite_trapezoid(f,0,2,8));
function integral = composite_trapezoid(f,a,b,n)
h = (b-a)/n;
integral = 0;
for i=1:n
    integral = integral + h*(f(a+(i-1)*h) + f(a+i*h))/2;
end
end